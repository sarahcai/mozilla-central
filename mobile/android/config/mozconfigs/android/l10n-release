. "$topsrcdir/mobile/android/config/mozconfigs/common"

# L10n
ac_add_options --with-l10n-base=$HOME/fennec/gecko

# Global options
ac_add_options --disable-tests

# Build Fennec
ac_add_options --enable-application=mobile/android

# Android
ac_add_options --target=arm-linux-androideabi

ac_add_options --with-android-ndk="$HOME/android-ndk-r8c"
ac_add_options --with-android-sdk="$HOME/android-sdk/platforms/android-16"

ac_add_options --with-android-version=9
ac_add_options --with-system-zlib
ac_add_options --enable-updater
ac_add_options --enable-update-channel=${MOZ_UPDATE_CHANNEL}

export MOZILLA_OFFICIAL=1

ac_add_options --enable-official-branding
ac_add_options --with-branding=mobile/android/branding/beta

mk_add_options MOZ_OBJDIR=$HOME/fennec/objdir-droid
mk_add_options MOZ_MAKE_FLAGS="-j9 -s"

. "$topsrcdir/mobile/android/config/mozconfigs/common.override"
