<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:gecko="http://schemas.android.com/apk/res-auto"
                  android:title="@string/pref_proxy_menu"
                  android:enabled="false">

        <ListPreference android:key="network.proxy.type"
                    android:title="@string/pref_proxy_menu"
                    android:entries="@array/pref_proxy_entries"
                    android:entryValues="@array/pref_proxy_values"
                    android:persistent="false" 
                    android:enabled="false"/>

        <EditTextPreference android:key="network.proxy.http"
                    android:title="@string/pref_proxy_http_proxy"
                    android:persistent="false" 
                    android:enabled="false"/>

        <EditTextPreference android:key="network.proxy.http_port"
                    android:title="@string/pref_proxy_http_port"
                    android:persistent="false" 
                    android:numeric="integer"
                    android:enabled="false"/>

</PreferenceScreen>

